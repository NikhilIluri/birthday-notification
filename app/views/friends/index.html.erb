<p id="notice"><%= notice %></p>
<p>
<div class="jumbotron">
<blockquote class="blockquote text-center"><h2 class="display-3">Hello, <%= current_user.name %>!</h2>
<h4>Manage your contacts. Check who all can be in your list.</h4>


 
<p class="lead">
<a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
Show/Hide Friends
</a>
</p>
</div>

<div class="collapse" id="collapseExample">
<div class="card card-body">
 

<h1>Friends</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Dob</th>
      <th>Mobile</th>
      <th>Reminder</th>
      <th>Call</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.dob %></td>
        <td><%= friend.mobile %></td>
        <td><%= friend.reminder %></td>
        <td><%= friend.call %></td>
        <td><%= friend.message %></td>
        <td><%= link_to 'Show', friend,:class=>'btn btn-success'%></td>
        <td><%= link_to 'Edit', edit_friend_path(friend),:class=>'btn btn-warning'  %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path,:class=>'btn btn-primary' %>
</div>
</div>
</div>